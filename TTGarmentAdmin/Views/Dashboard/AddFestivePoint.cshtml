@model TTGarmentAdmin.Models.DashboardModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>


<style>
    #progress_bar {
        margin: 10px 0;
        padding: 3px;
        border: 1px solid #000;
        font-size: 14px;
        clear: both;
        opacity: 0;
        -moz-transition: opacity 1s linear;
        -o-transition: opacity 1s linear;
        -webkit-transition: opacity 1s linear;
    }

        #progress_bar.loading {
            opacity: 1.0;
        }

        #progress_bar .percent {
            background-color: #99ccff;
            height: auto;
            width: 0;
        }

    .form-horizontal .form-group {
        margin-right: 17.5px !important;
    }

    .form-style {
        width: 60%;
        margin-left: 30%;
    }
</style>

<body>
    <div class="row">
        <form data-parsley-validate class="validateForm form-horizontal form-style" id="festivePointForm" onsubmit="return SaveFestivePoint();">
            @Html.HiddenFor(m => m.FestivePointDetail.Id, new { name = "Id" })
            @Html.HiddenFor(m => m.FestivePointDetail.IsActive, new { name = "IsActive" })
            @Html.HiddenFor(m => m.FestivePointDetail.AddedDate, new { name = "AddedDate" })

            <div class="form-group" style="display:inline-block;">
                <label>From Date</label>
                @Html.TextBoxFor(m => m.FestivePointDetail.FromDate, new { @id = "fromDate", @required = "required", @class = "form-control", @style = "height: 38px;", @placeholder = "Value" })
            </div>

            <div class="form-group" style="display:inline-block; margin-right:2%;">
                <label>To Date</label>
                @Html.TextBoxFor(m => m.FestivePointDetail.ToDate, new { @id = "toDate", @required = "required", @class = "form-control", @style = "height: 38px;", @placeholder = "Value" })
            </div>
            <br />
            <div class="form-group" style="display:inline-block;">
                <label>From Point</label>
                @Html.TextBoxFor(m => m.FestivePointDetail.FromPoint, new { @id = "FromPoint", @required = "required", @class = "form-control", @style = "height: 38px;", @placeholder = "Value" })
            </div>

            <div class="form-group" style="display:inline-block; margin-right:2%;">
                <label>To Point</label>
                @Html.TextBoxFor(m => m.FestivePointDetail.ToPoint, new { @id = "ToPoint", @required = "required", @class = "form-control", @style = "height: 38px;", @placeholder = "Value" })
            </div>
            <label id="error" style="color:red;"></label>
            <br />
            <button class="btn btn-large btn-primary" type="submit">Save</button>
        </form>

    </div>
</body>
</html>

<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/Project/dashboard.js"></script>
</head>
<script>
    var jq = $.noConflict();
    jq(".preloader").hide();
    jq('#fromDate').datepicker({
    });
    jq('#toDate').datepicker({
    });
</script>