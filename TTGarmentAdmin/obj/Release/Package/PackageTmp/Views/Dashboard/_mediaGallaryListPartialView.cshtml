@helper CustomRenderingOfImage(string filepath, string category, string filename)
{
    <a href=@filepath target="_blank">
        @if (category.Contains("Image"))
        {
            if (filepath != null)
            {
                <img src="@filepath" height="50" width="50" />
            }
        }
        else
        {
            <div>@filename</div>
        }
    </a>
}

@helper CustomRenderingOfStatusColumn(string Id, bool? status)
{
var statusValue = "";
if (status == true)
{
    statusValue = "DeActivate";
}
else
{
    statusValue = "Activate";
}

    <span id="@Id" name="mediaGallaryStatus" style="color:blue; text-decoration-line:underline; cursor:pointer; ">@statusValue</span>
}

@helper CustomRenderingOfActionColumn(string Id)
{
    <a href="@Url.Action("GallaryByIdView", "Dashboard", new { Id = Id })"><img src="~/images/edit.png" height="20" name="editMember" /></a>
}

@****** New code for Promotion ******@
<div class="card mb-3" id="responseContainer">
    <div class="card-header">
        <i class="fa fa-table"></i> Gallary List
        @*<button id="export" class="btn btn-info btn-sm left btn-block text-uppercase waves-effect waves-light" style="float: right;  width: 10% !important;  margin: 0px !important;">Export</button>*@
        @*<div style="display:none;">@Html.Raw(Model.TableString)</div>*@
    </div>
    <div class="card-body">
        @if (Model.MediaList == null || Model.MediaList == null || Model.MediaList.Count == 0)
        {
            <div>No record Found</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Category Name</th>
                            <th>File</th>
                            <th>Uploaded Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var media in Model.MediaList)
                        {
                            <tr>
                                <td>@media.Id</td>
                                <td>@media.CategoryName</td>
                                <td>@CustomRenderingOfImage(media.Url, media.CategoryName, media.FileName)</td>
                                <td>@media.Date</td>
                                <td>@CustomRenderingOfStatusColumn(media.Id, media.IsActive)</td>
                                <td>@CustomRenderingOfActionColumn(media.Id)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

