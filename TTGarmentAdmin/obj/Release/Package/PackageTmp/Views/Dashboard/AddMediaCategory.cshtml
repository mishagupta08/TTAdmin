@model TTGarmentAdmin.Models.DashboardModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>


<style>
    #progress_bar {
        margin: 10px 0;
        padding: 3px;
        border: 1px solid #000;
        font-size: 14px;
        clear: both;
        opacity: 0;
        -moz-transition: opacity 1s linear;
        -o-transition: opacity 1s linear;
        -webkit-transition: opacity 1s linear;
    }

        #progress_bar.loading {
            opacity: 1.0;
        }

        #progress_bar .percent {
            background-color: #99ccff;
            height: auto;
            width: 0;
        }

    .form-style {
        width: 30%;
        margin-left: 34%;
    }
</style>

<body>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Add Media Category</a>
        </li>
        @*<li class="breadcrumb-item active"></li>*@
    </ol>
    <div class="row">
        <form data-parsley-validate style="padding: 30px; margin-top: 10%;  background: white;" class="validateForm form-horizontal form-style" id="mediaForm" onsubmit="return SaveMediaCategoryDetail();">
            @Html.HiddenFor(m => m.MediaCategory.Id, new { name = "Id" })

            <div class="form-group">
                <label>Category</label>
                @Html.TextBoxFor(m => m.MediaCategory.Category, new { @id = "Heading", @required = "required", @class = "form-control", @placeholder = "Heading" })
            </div>
            <br />
            <label id="error" style="color:red;"></label>
            <br />
            <button class="btn btn-large btn-primary" type="submit">Save</button>
        </form>

    </div>
</body>
</html>

<head>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/Project/dashboard.js"></script>
</head>